<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>CaesarServlet</servlet-name>
        <servlet-class>ch.unil.doplab.caesar.web.CaesarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaesarSingletonServlet</servlet-name>
        <servlet-class>ch.unil.doplab.caesar.web.CaesarSingletonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Stateful</servlet-name>
        <servlet-class>ch.unil.doplab.caesar.web.Stateful</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaesarServlet</servlet-name>
        <url-pattern>/caesar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaesarSingletonServlet</servlet-name>
        <url-pattern>/caesarsingleton</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Stateful</servlet-name>
        <url-pattern>/Stateful</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
